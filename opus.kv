# kivy: 1.11.1

<MainPage>:
    GridLayout:
        cols: 1
        canvas:
            Color:
                rgba: (0.12, 0.12, 0.12, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols:1
            size: root.width, root.height
            Label:
                text: "OPUS - what have you read today?"
            Button:
                text: "the same thing"
                on_press: root.same_thing_button()
            Button:
                text: "something else"
                on_press: root.something_else_button()

<SomethingElsePage>:
    GridLayout:
        cols: 1
        Accordion:
            orientation: 'vertical'
            AccordionItem:
                id: book_item
                title: "which book?"
                collapse: False
                TextInput:
                    text: "fill me!"
                    size_hint_y: None
                    height: 30
                    id: book
                    on_text: root.parse_book(args)
            AccordionItem:
                title: "the author"
                TextInput:
                    text: "yep me"
                    size_hint_y: None
                    height: 30
                    id: author
            AccordionItem:
                title: "all done?"
                Button:
                    text: "add to OPUS"
                    on_press: root.enter_data()